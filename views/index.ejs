<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="nice 2 meet">
    <meta name="author" content="Ridvan Bekir">
    <link rel="icon" href="/static/image/meet_me_round.png">

    <title>Nice2Meet: Homepage</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://v4-alpha.getbootstrap.com/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->

    <!-- Custom styles for this template -->
    <link href="/static/css/styles.css" rel="stylesheet">
  </head>

  <body>

    <div class="container">
      <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills float-right">
            <li class="nav-item">
              <a class="nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile">
              <% if (req.isAuthenticated()) { %> 
                  Profile
              <% } else { %>
                  Account
              <% } %>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Contact</a>
            </li>
          </ul>
        </nav>
        <h3 class="text-muted">Nice2Meet</h3>
      </div>

      <div class="jumbotron text-center">
        <h3 class="display-3">Welcome to Nice2Meet</h3>

        <img src="/static/image/meeting_people.png" alt="People Meeting" width="30%"/>

		    <p>Experience the new way of meeting people. You only have to:</p>

        <% if (req.isAuthenticated()) { %>
          <a href="/profile" class="btn btn-default"><span class="fa fa-user"></span>  Go to Profile</a>
        <% } else { %>
          <a href="/login" class="btn btn-default"><span class="fa fa-user"></span>  Login</a>
          <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span>  Signup</a>

          <p>Or login with one click only:</p>
          <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
          <a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a>
          <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google+</a>
        <% } %> 
      </div>

      <div class="row marketing">
        <div class="col-lg-6">
          <h4>Uniqueness</h4>
          <p>Nice2Meet is the first and only of its kind.</p>

          <h4>Head of technology</h4>
          <p>The newest and progressive technologies are used on the development of the application.</p>

          <h4>Be ahean of everyone</h4>
          <p></p>
        </div>

        <div class="col-lg-6">
          <h4>New experience</h4>
          <p>With the new application you will date more people.</p>

          <h4>Innovation</h4>
          <p>The application is considered to be the new technological innovation.</p>

          <h4>Social contribution</h4>
          <p></p>
        </div>
      </div>

      <footer class="footer">
        <p>&copy; MeetMe 2017</p>
      </footer>

    </div> <!-- /container -->
  </body>
</html>